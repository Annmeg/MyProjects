<Application
    x:Class="TikTak.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TikTak">
    <Application.Resources>
        <Style TargetType="TextBlock" x:Key="ItemTextStyle">
            <Setter Property="FontSize" Value="50"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Gothlc"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="Width" Value="70"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="ResultTextStyle">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="Roman"/>
            <Setter Property="Foreground" Value="RosyBrown"/>
        </Style>
    </Application.Resources>
</Application>
